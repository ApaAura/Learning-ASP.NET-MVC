@model List<Customer>
@{
    ViewData["Title"] = "Index";
}

<h1>Customers</h1>

@{
    <button type="submit" class="btn btn-primary">@Html.ActionLink("New Customer","New")</button>
    if(Model.Count()!=0)
    {
         <table class="table table-hover">
            <thead>
              <tr>
                <th scope="col">ID</th>
                <th scope="col"> Customer name</th>
                <th scope="col"> MembershipType</th>
              </tr>
            </thead>
            <tbody>
            @foreach (var customer in Model)
            {
              <tr>
                <th scope="row">@customer.Id</th>
                <th>@Html.ActionLink(customer.Name, "Edit", "Customers", new {id=customer.Id})</th>
                <th>@customer.MembershipType.Name</th>
              </tr>
            }
            </tbody>
        </table>
    }
    else
    {
        <text>Nu au fost gasiti Customeri</text>
    }
}
