@model WebAppFirst.Models.Movie
@{
    ViewData["Title"] = "View";
}

<h1>@Model.Name</h1>
<hr />
<ul>
    <li>
        <b>Genre:</b> @Model.Genre.Name
    </li>
    <li>
        <b>Release Date:</b>@Model.Released.ToShortDateString()
    </li>
    <li>
        <b>Date Added:</b> @Model.Added.ToShortDateString()
    </li>
    <li>
        <b>Number in Stock:</b> @Model.NumberInStock
    </li>
</ul>

