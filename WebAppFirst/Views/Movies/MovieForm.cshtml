@model WebAppFirst.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = Model.Title;
}

<h1>@Model.Title</h1>
@using (Html.BeginForm("Save", "Movies"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Name)
        @Html.TextBoxFor(m => m.Movie.Name, new { @class = "form-control w-25" })
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.Released)
        @Html.TextBoxFor(m => m.Movie.Released, "{0:d MMM yyyy}", new { @class = "form-control w-25" })
        </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.GenreID)
        @Html.DropDownListFor(m => m.Movie.GenreID, new SelectList(Model.Genre, "Id", "Name"), "Select Genre", new {@class = "form-control w-25"})
        </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Movie.NumberInStock)
        @Html.TextBoxFor(m => m.Movie.NumberInStock, new { @class = "form-control w-25" })
    </div>
    @Html.HiddenFor(m => m.Movie.Id)
    <br />
    <button type="submit" class="btn btn-primary">Save</button>
}


